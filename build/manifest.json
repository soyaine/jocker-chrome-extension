{
  "name": "Love Jike Extension",
  "description" : "Better Jike Web",
  "version": "2.0.1",
  "browser_action": {
    "default_icon": "icon128.png"
  },
  "manifest_version": 2,
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      }
    }
  },
  "icons": 
  { 
    "16": "icon16.png",             
    "48": "icon48.png",            
    "128": "icon128.png" 
  },  
  "content_scripts": [
    {
      "matches": [
        "https://web.okjike.com/*", "https://web.ruguoapp.com//*"
      ],
      "js": ["notification.js"]
    }
  ],
  "permissions": [
    "https://app.jike.ruguoapp.com/"
  ]
}
